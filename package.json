{
  "name": "server",
  "version": "1.0.0",
  "engines": {
    "npm": "3.10.10",
    "node": "6.11.0"
  },
  "description": "server-side code for more-recipes app",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha server/src/test/**/**.spec.js --exit --compilers js:babel-core/register",
    "drop:db": "NODE_ENV=test ./node_modules/.bin/sequelize db:drop",
    "create:db": "NODE_ENV=test ./node_modules/.bin/sequelize db:create more_recipes_test",
    "migrate:db": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate",
    "test:dev": "npm-run-all --sequential drop:db create:db migrate:db test",
    "babel-node": "babel-node ./server/src/index.js --presets=env",
    "startDev": "./node_modules/.bin/babel-watch server/src/app.js",
    "build": "babel server/src -d server/dist",
    "heroku-postbuild": "npm run build",
    "start": "node server/dist/app.js",
    "coveralls": "nyc npm run test:dev&& nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Gbenga Oshinaga",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-latest": "^6.24.1",
    "babel-watch": "^2.0.7",
    "babili": "^0.1.4",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "express": "^4.16.2",
    "express-fileupload": "^0.3.0",
    "express-validation": "^1.0.2",
    "http-server": "^0.10.0",
    "joi": "^13.0.1",
    "jsend": "^1.0.2",
    "jsonwebtoken": "^8.1.0",
    "mocha": "^4.0.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.2.1",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.20.1",
    "sequelize-cli": "^3.0.0"
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.5.1",
    "faker": "^4.1.0"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GbengaOshinaga/more-recipes.git"
  },
  "bugs": {
    "url": "https://github.com/GbengaOshinaga/more-recipes/issues"
  },
  "homepage": "https://github.com/GbengaOshinaga/more-recipes#readme"
}
